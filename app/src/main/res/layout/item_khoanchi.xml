<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_chi"
    android:padding="16dp"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardElevation="4dp">

    <RelativeLayout
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/icon_khoanchi"
            android:layout_margin="9dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_cop"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <LinearLayout
            android:layout_toLeftOf="@+id/ll1"
            android:layout_width="290dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="4dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/icon_khoanchi"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tieude_khoanchi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiêu đề khoản chi"
                android:textColor="#6A5D5D"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title_ngay_khoanchi"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Ngày : "
                    android:textStyle="italic"
                    android:textColor="#6A5D5D"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_ngay_khoanchi"
                    android:layout_toRightOf="@+id/title_ngay_khoanchi"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:text="yyyy-MM-dd"
                    android:gravity="center_vertical"
                    android:textStyle="italic"
                    android:textColor="#6A5D5D"
                    android:textSize="12sp" />
                <ImageView
                    android:id="@+id/title_tien_khoanthu"
                    android:src="@drawable/ic_money_icon"
                    android:layout_toRightOf="@+id/tv_ngay_khoanchi"
                    android:layout_marginRight="4dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="Tiền : "
                    android:textStyle="italic"
                    android:textColor="#6A5D5D"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_tien_khoanchi"
                    android:layout_toRightOf="@+id/title_tien_khoanthu"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="20dp"
                    android:text="0.000.000"
                    android:textStyle="italic"
                    android:textColor="#6A5D5D"
                    android:textSize="12sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title_ghichu_giaodich"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ghi chú : "
                    android:textStyle="italic"
                    android:textColor="#6A5D5D"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_ghichu_khoanchi"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@+id/title_ghichu_giaodich"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="None"
                    android:textStyle="italic"
                    android:textColor="#6A5D5D"
                    android:textSize="10sp" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_margin="2dp"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_delete_khoanchi"
                android:src="@drawable/ic_garbage"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <ImageView
                android:id="@+id/img_edit_khoanchi"
                android:src="@drawable/ic_edit"
                android:layout_marginTop="14dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>