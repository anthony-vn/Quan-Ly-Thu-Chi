<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_pl"
    android:padding="16dp"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardElevation="4dp">

    <RelativeLayout
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/icon_phanloai"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_at"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_marginStart="5dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@+id/icon_phanloai"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tenloai_pl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đây là loại gì?"
                android:textColor="#6A5D5D"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_trangthai_pl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trạng thái"
                android:textStyle="italic"
                android:textColor="#6A5D5D"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_marginTop="3dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btn_delete_pl"
                android:src="@drawable/ic_garbage"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <ImageView
                android:id="@+id/btn_edit_pl"
                android:src="@drawable/ic_edit"
                android:layout_marginTop="14dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>